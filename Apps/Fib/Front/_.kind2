// Fib's state has:
// - map: Apps.Fib.Map   // the game's map, a 160x160 grid
// - tab: Apps.Fib.Table // an `EntityID -> Entity` map, where EntityID is a 12-bit key
// What must be done is:
//   for x from 0 to 160:
//     for y from 0 to 160:
//       entity = get x y from map
//       switch entity:
//         case 0   => draw grass
//         case 1   => draw rock
//         case 256 => draw dragon
//         default  => draw poring

Apps.Fib.Front : App Apps.Fib.Front.State {

  // The initial state.
  let init = Apps.Fib.Front.State.init

  // TODO: render the state as a map.
  let draw = (state: Apps.Fib.Front.State) =>
    let pos_fst = Apps.Fib.Front.State.get_pos_fst state
    let pos_snd = Apps.Fib.Front.State.get_pos_snd state
    let map     = Apps.Fib.Front.State.get_map     state
    let input   = Apps.Fib.Front.State.get_input   state
    let divs    = match Maybe pos_fst {
      none => [(App.DOM.node "div" [] [] [(App.DOM.text "Choose First Coord" )])]
      some =>
        match Maybe pos_snd {
          none => [(App.DOM.node "div" [] [] [(App.DOM.text "Choose Second Coord" )])]
          some => 
            let id     = (Apps.Fib.Map.get_from_coord map pos_fst.value) 
            if (U120.equal id (U120.new 0 0)) {[(App.DOM.node "div" [] [] [(App.DOM.text "No Entity There" )])]}
            else {
              let x0     = U120.new 0 (Pair.fst pos_fst.value)
              let y0     = U120.new 0 (Pair.snd pos_fst.value)
              let x1     = U120.new 0 (Pair.fst pos_snd.value)
              let y1     = U120.new 0 (Pair.snd pos_snd.value)
              // (U60.show (Pair.fst pos_fst.value)) ((U60.show (Pair.snd pos_fst.value)) "_")
              let walk   = String.concat "Walk code: "    ((U120.show (Apps.Fib.Interact.pos.walk  id                x0 y0 x1 y1)) String.nil)
              let skill0 = String.concat "Skill_0 code: " ((U120.show (Apps.Fib.Interact.pos.skill id (U120.new 0 0) x0 y0 x1 y1)) String.nil)
              let skill1 = String.concat "Skill_1 code: " ((U120.show (Apps.Fib.Interact.pos.skill id (U120.new 0 1) x0 y0 x1 y1)) String.nil)
              [
                (App.DOM.node "div" [] [] [(App.DOM.text walk  )])
                (App.DOM.node "div" [] [] [(App.DOM.text skill0)])
                (App.DOM.node "div" [] [] [(App.DOM.text skill1)])
              ]
            }
        }
    }
    let page_style = [
      (Pair.new "width"  "1024px")
      (Pair.new "height" "1024px")]
    let map_style = [
      (Pair.new "width"  (String.concat (Show.to_string (U60.show (* Apps.Fib.Front.size_x Apps.Fib.Front.tile_size))) "px"))
      (Pair.new "height" (String.concat (Show.to_string (U60.show (* Apps.Fib.Front.size_y Apps.Fib.Front.tile_size))) "px"))]
    
    App.DOM.node "div" [] page_style (List.concat [
      (App.DOM.node "div" [] map_style (Apps.Fib.Front.draw.map state))
    ] divs)
  // TODO: get the state from the blockchain.
  let when = (event: App.Event) => (state: Apps.Fib.Front.State) => Apps.Fib.Front.when event state

  App.new init draw when
}

Apps.Fib.Front.read (str: String ) : Pair U60 U60 {
  let split = String.split str "_"
  let fst   = Apps.Fib.Front.read_char (String.reverse (Maybe.default (List.at split Nat.zero) ""))
  let snd   = Apps.Fib.Front.read_char (String.reverse (Maybe.default (List.at split (Nat.succ Nat.zero)) ""))
  Pair.new fst snd
}

Apps.Fib.Front.read_char (str: String) : U60
Apps.Fib.Front.read_char (String.nil)        = 0
Apps.Fib.Front.read_char (String.cons '0' t) = (+ 0 (* (Apps.Fib.Front.read_char t) 10))
Apps.Fib.Front.read_char (String.cons '1' t) = (+ 1 (* (Apps.Fib.Front.read_char t) 10))
Apps.Fib.Front.read_char (String.cons '2' t) = (+ 2 (* (Apps.Fib.Front.read_char t) 10))
Apps.Fib.Front.read_char (String.cons '3' t) = (+ 3 (* (Apps.Fib.Front.read_char t) 10))
Apps.Fib.Front.read_char (String.cons '4' t) = (+ 4 (* (Apps.Fib.Front.read_char t) 10))
Apps.Fib.Front.read_char (String.cons '5' t) = (+ 5 (* (Apps.Fib.Front.read_char t) 10))
Apps.Fib.Front.read_char (String.cons '6' t) = (+ 6 (* (Apps.Fib.Front.read_char t) 10))
Apps.Fib.Front.read_char (String.cons '7' t) = (+ 7 (* (Apps.Fib.Front.read_char t) 10))
Apps.Fib.Front.read_char (String.cons '8' t) = (+ 8 (* (Apps.Fib.Front.read_char t) 10))
Apps.Fib.Front.read_char (String.cons '9' t) = (+ 9 (* (Apps.Fib.Front.read_char t) 10))
Apps.Fib.Front.read_char (String.cons  h  t) = ((Apps.Fib.Front.read_char t))


Apps.Fib.Front.when (event: App.Event) (state: Apps.Fib.Front.State) : IO Apps.Fib.Front.State
// TODO: make pressing arrow keys move map
Apps.Fib.Front.when (App.Event.key_down code) (Apps.Fib.Front.State.new map_pos pos_fst pos_snd input state) = 
  let new_pos = Apps.Fib.Front.when.move_map map_pos code
  do IO { return Apps.Fib.Front.State.new new_pos pos_fst pos_snd input state }

Apps.Fib.Front.when (App.Event.mouse_click elem) (Apps.Fib.Front.State.new map_pos (Maybe.some s val) (Maybe.none n) input state) = 
  if String.starts_with elem "coord " {
    let coord   = String.drop (U60.to_nat 6) elem
    let pos     = Apps.Fib.Front.read coord
    let new_pos = Maybe.some pos
    do IO { return (Apps.Fib.Front.State.new map_pos (Maybe.some s val) new_pos input state)}
  }
  else { do IO { return Apps.Fib.Front.State.new map_pos (Maybe.some s val) (Maybe.none n) input state }}
  
Apps.Fib.Front.when (App.Event.mouse_click elem) (Apps.Fib.Front.State.new map_pos pos_fst pos_snd input state) = 
  if String.starts_with elem "coord " {
    let coord   = String.drop (U60.to_nat 6) elem
    let pos     = Apps.Fib.Front.read coord
    let new_pos = Maybe.some pos
  do IO { return Apps.Fib.Front.State.new map_pos new_pos Maybe.none input state }
  }
  else { do IO { return (Apps.Fib.Front.State.new map_pos pos_fst pos_snd input state)}}

