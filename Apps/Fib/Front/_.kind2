Apps.Fib.Front.when.move_map (map_pos: Pair U60 U60) (code: U60) : Pair U60 U60
Apps.Fib.Front.when.move_map map_pos 'w'  = Pair.map_snd map_pos ((y : U60 ) => U60.sub.saturated y 1)
Apps.Fib.Front.when.move_map map_pos 'W'  = Pair.map_snd map_pos ((y : U60 ) => U60.sub.saturated y 1)
Apps.Fib.Front.when.move_map map_pos 'a'  = Pair.map_fst map_pos ((x : U60 ) => U60.sub.saturated x 1)
Apps.Fib.Front.when.move_map map_pos 'A'  = Pair.map_fst map_pos ((x : U60 ) => U60.sub.saturated x 1)
Apps.Fib.Front.when.move_map map_pos 's'  = Pair.map_snd map_pos ((y : U60 ) => U60.min (- 160 Apps.Fib.Front.size_y) (+ y 1))
Apps.Fib.Front.when.move_map map_pos 'S'  = Pair.map_snd map_pos ((y : U60 ) => U60.min (- 160 Apps.Fib.Front.size_y) (+ y 1))
Apps.Fib.Front.when.move_map map_pos 'd'  = Pair.map_fst map_pos ((x : U60 ) => U60.min (- 160 Apps.Fib.Front.size_x) (+ x 1))
Apps.Fib.Front.when.move_map map_pos 'D'  = Pair.map_fst map_pos ((x : U60 ) => U60.min (- 160 Apps.Fib.Front.size_x) (+ x 1))
Apps.Fib.Front.when.move_map map_pos code = map_pos

Apps.Fib.Front.draw.map (state: Apps.Fib.Front.State) : List App.DOM 
Apps.Fib.Front.draw.map (Apps.Fib.Front.State.new (Pair.new x y) pos_fst pos_snd input (Apps.Fib.State.new map tab)) =
  Apps.Fib.Front.draw.map.lines Apps.Fib.Front.size_y x y map

Apps.Fib.Front.draw.map.lines (cy: U60) (x: U60) (y: U60) (map: Apps.Fib.Map) : List App.DOM
Apps.Fib.Front.draw.map.lines  0 x y map = []
Apps.Fib.Front.draw.map.lines cy x y map = 
  let style = [
    (Pair.new "width" (String.concat (Show.to_string (U60.show (* Apps.Fib.Front.size_x Apps.Fib.Front.tile_size))) "px"))
    (Pair.new "height" ((U60.show Apps.Fib.Front.tile_size) "px"))
    (Pair.new "display" "flex")
  ]
  let doms = Apps.Fib.Front.draw.map.tiles Apps.Fib.Front.size_x x y map
  let dom  = (App.DOM.node "div" [] style doms)
  List.cons dom (Apps.Fib.Front.draw.map.lines (- cy 1) x (+ y 1) map)

Apps.Fib.Front.draw.map.tiles (cx: U60) (x: U60) (y: U60) (map: Apps.Fib.Map) : List App.DOM
Apps.Fib.Front.draw.map.tiles 0  x y map = []
Apps.Fib.Front.draw.map.tiles cx x y map = 
  let seed  = 0
  let id    = Apps.Fib.Map.get_from_coord map (Pair.new x y)
  let c_txt = String.concat "coord "((U60.show x) (String.cons '_' (Show.to_string (U60.show y))))
  let dom   = Apps.Fib.Front.Draw.Entity id c_txt seed
  List.cons dom (Apps.Fib.Front.draw.map.tiles (- cx 1) (+ x 1) y map)
